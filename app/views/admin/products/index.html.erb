<p id="notice"><%= notice %></p>

<!-- <h1>Products</h1> -->
<div class="pageheader">
     <h2> Products</h2>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
          <li><%= link_to "Home", admin_dashboard_index_path %></li>
          <li class="active">Products</li>
        </ol>
    </div>
</div>

<div class="contentpanel">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-3 mb10">
          
          <%= link_to "Add Product", new_admin_product_path, class:"btn btn-success"%>
          
        </div>
      
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-bordered table-striped" id="searchTable" >
              <thead>
                <tr>
                  <th>Productcode</th>
                  <th>Productname</th>
                  <th>Productcost</th>
                  <th colspan="3">Action</th>
                </tr>
              </thead>

              <tbody>
                <% @admin_products.each do |admin_product| %>
                  <tr>
                    <td><%= admin_product.productCode %></td>
                    <td><%= admin_product.productName %></td>
                    <td><%= admin_product.productCost %></td>
                    <td><%= link_to 'Show', admin_product, class:"btn btn-success" %></td>
                    <td><%= link_to 'Edit', edit_admin_product_path(admin_product), class:"btn btn-warning" %></td>
                    <td><%= link_to 'Destroy', admin_product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
