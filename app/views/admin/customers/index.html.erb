<p id="notice"><%= notice %></p>
<div class="pageheader">
     <h2> Customers</h2>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
          <li><%= link_to "Home", admin_dashboard_index_path %></li>
          <li class="active">Customers</li>
        </ol>
    </div>
</div>

<div class="contentpanel">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-3 mb10">
          
          <%= link_to "Add Customer", new_admin_customer_path, class:"btn btn-success"%>
          
        </div>
      
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-bordered table-striped" id="searchTable" >
              <thead>
                <tr>
                  <th>Customercode</th>
                  <th>Customername</th>
                  <th>Customerphone</th>
                  <th colspan="3">Action</th>
                </tr>
              </thead>

              <tbody>
                <% @admin_customers.each do |admin_customer| %>
                  <tr>
                    <td><%= admin_customer.customerCode %></td>
                    <td><%= admin_customer.customerName %></td>
                    <td><%= admin_customer.customerPhone %></td>
                    <td><%= link_to 'Show', admin_customer, class: 'btn btn-success' %></td>
                    <td><%= link_to 'Edit', edit_admin_customer_path(admin_customer), class: 'btn btn-warning' %></td>
                    <td><%= link_to 'Destroy', admin_customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>

